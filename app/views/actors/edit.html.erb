<h1>Editing Actor #<%= @actor.id %></h1>

<form action="/actors/<%= @actor.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @actor.name  %>" type="text" />
  </div>
  <div>
    <label for="src">src</label><br />
    <input id="src" name="src" value="<%= @actor.src  %>" type="text" />
  </div>
  <div>
    <label for="bio">bio</label><br />
    <input id="bio" name="bio" value="<%= @actor.bio  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


