<h1>Actors</h1>

<p><a href="/new_actor">Add a New Actor</a></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @actors.each do |actor| %>
    <tr>
          <td><%= actor.name %></td>
          <td><img src="<%= actor.src %>" height=100px width=100px></td>
          <td><%= actor.bio %></td>
          <td><a href="/actors/<%= actor.id %>">Show</a>
        </td>
      <td><a href="/actors/<%= actor.id %>/edit">Edit</a></td>
      <td><a href="/actors/<%= actor.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

